<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Rank Badge -->
        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/bg_rank_default"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical" />

        <!-- Helper Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Helper Name -->
            <TextView
                android:id="@+id/tv_helper_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Helper Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <!-- Helper Email -->
            <TextView
                android:id="@+id/tv_helper_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="helper@example.com"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="12dp" />

            <!-- Metrics Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <!-- Total Bookings -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bookings"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_total_bookings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Average Rating -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rating"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_average_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No ratings"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Middle Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="4dp">

                    <!-- Completion Rate -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Completion"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_completion_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <!-- Total Earnings -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Earnings"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_total_earnings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
