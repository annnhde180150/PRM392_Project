<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Chính"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tv_menu_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn trang để điều hướng"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- Menu Buttons Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Welcome Activity Button -->
            <Button
                android:id="@+id/btn_welcome"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Welcome Screen"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary_bg"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <!-- User Type Activity Button -->
            <Button
                android:id="@+id/btn_user_type"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="User Type Selection"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary_bg"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <!-- Login Activity Button -->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Login Screen"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary_bg"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <!-- Dashboard Activity Button -->
            <Button
                android:id="@+id/btn_dashboard"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Dashboard Screen"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary_bg"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp" />

            <!-- Additional Options Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tùy chọn khác"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Test Customer Flow Button -->
            <Button
                android:id="@+id/btn_test_customer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Test Customer Flow"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:background="@drawable/input_background_selector"
                android:layout_marginBottom="12dp" />

            <!-- Test Helper Flow Button -->
            <Button
                android:id="@+id/btn_test_helper"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Test Helper Flow"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:background="@drawable/input_background_selector"
                android:layout_marginBottom="12dp" />

            <!-- Test Admin Flow Button -->
            <Button
                android:id="@+id/btn_test_admin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Test Admin Flow"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:background="@drawable/input_background_selector"
                android:layout_marginBottom="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Reset Flow Button -->
    <Button
        android:id="@+id/btn_reset_flow"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Reset về Welcome"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp" />

</LinearLayout> 