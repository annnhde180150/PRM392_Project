<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imgOtpIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_email"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvOtpTitle"
        android:text="Verification"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvOtpSubtitle"
        android:text="You will get a OTP via Email"
        android:textSize="14sp"
        android:textColor="#888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/otpInputRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">
        <EditText
            android:id="@+id/etOtp1"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:background="@drawable/otp_edittext_bg"
            android:layout_marginEnd="8dp"/>
        <EditText
            android:id="@+id/etOtp2"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:background="@drawable/otp_edittext_bg"
            android:layout_marginEnd="8dp"/>
        <EditText
            android:id="@+id/etOtp3"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:background="@drawable/otp_edittext_bg"
            android:layout_marginEnd="8dp"/>
        <EditText
            android:id="@+id/etOtp4"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:background="@drawable/otp_edittext_bg"
            android:layout_marginEnd="8dp"/>
        <EditText
            android:id="@+id/etOtp5"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:background="@drawable/otp_edittext_bg"
            android:layout_marginEnd="8dp"/>
        <EditText
            android:id="@+id/etOtp6"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:background="@drawable/otp_edittext_bg"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnVerifyOtp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="VERIFY"
        android:backgroundTint="#6C5DD3"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_bg"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>


</LinearLayout> 