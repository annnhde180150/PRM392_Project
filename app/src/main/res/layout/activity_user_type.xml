<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_type_background"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Top spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" />

    <!-- Illustration -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginBottom="32dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:contentDescription="@string/user_type_illustration_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/user_type_illustration" />

    </FrameLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="@string/user_type_title"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Middle spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <!-- Customer Button -->
        <Button
            android:id="@+id/btn_customer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_primary_bg"
            android:elevation="2dp"
            android:text="@string/btn_customer"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Helper Button -->
        <Button
            android:id="@+id/btn_helper"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_primary_bg"
            android:elevation="2dp"
            android:text="@string/btn_helper"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Admin Button -->
        <Button
            android:id="@+id/btn_admin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_primary_bg"
            android:elevation="2dp"
            android:text="@string/btn_admin"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>