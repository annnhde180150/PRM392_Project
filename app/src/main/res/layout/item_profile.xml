<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewProfileId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: 123"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewProfileType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: User"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Alice Wonderland"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: user@example.com"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textViewPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: 1234567890"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Active"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/textViewRegistrationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registered: 20/06/2025 16:33"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

        <!-- Ban Information Section -->
        <TextView
            android:id="@+id/textViewBanReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ban Reason: N/A"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewBannedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banned At: N/A"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewBanDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ban Duration: N/A"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 