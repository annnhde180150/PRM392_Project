<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.example.homehelperfinder.ui.postRequest.PostRequestViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Post a Request"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- Service Heading -->
        <TextView
            android:id="@+id/tvServiceHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What type of service do you need?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"/>

        <!-- RecyclerView for Service Boxes (Flexbox style) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvServices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvServiceHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:paddingBottom="20dp"
            android:overScrollMode="never"/>

        <!-- When do you need it? -->
        <TextView
            android:id="@+id/tvWhenNeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When do you need it?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@id/rvServices"
            android:paddingBottom="12dp"/>

        <!-- Date Picker EditText -->
        <EditText
            android:id="@+id/etDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Select date"
            android:focusable="false"
            android:inputType="none"
            android:text="@={model.startTime}"
            android:drawableEnd="@drawable/ic_calendar"
            app:layout_constraintTop_toBottomOf="@id/tvWhenNeed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/etNumber"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:background="@drawable/rounded_cornor_gray_white_backround"/>

        <!-- Number Input EditText -->

        <EditText
            android:id="@+id/etNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_cornor_gray_white_backround"
            android:hint="Enter number (e.g. hours, quantity)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:text="@={model.duration}"
            app:layout_constraintBottom_toTopOf="@id/tvLocationLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etDate" />

        <!-- Location Spinner -->

        <TextView
            android:id="@+id/tvLocationLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where is the service location?"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/etNumber"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:layout_editor_absoluteX="16dp" />

        <Spinner
            android:id="@+id/spAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvLocationLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            android:background="@drawable/rounded_cornor_gray_white_backround"/>

        <!-- Special Requests -->
        <TextView
            android:id="@+id/tvSpecialRequestsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Any Special Requests?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@id/spAddress"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="8dp"/>

        <!-- Submit Button -->

        <EditText
            android:id="@+id/etSpecialRequests"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_message_received"
            android:gravity="top|start"
            android:hint="Enter any special requests here"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:text="@={model.specialNote}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialRequestsLabel" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submit Request"
            android:textColor="@color/black"
            android:background="@drawable/rounded_cornor_gray_white_backround"
            android:textStyle="bold"
            android:textSize="16sp"
            app:backgroundTint="@color/blue_white"
            app:layout_constraintTop_toBottomOf="@id/etSpecialRequests"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>